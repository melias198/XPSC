 
{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile and run",
        "type": "shell",
        "command": "",
        "args": [
          "g++",
          "-g",
          "${relativeFile}",
          "-o",
          "${fileBasenameNoExtension}.out",
          "&&",
          "clear",
          "&&",
          "timeout",
          "10",
          "/usr/bin/time",
          "-v",
          "--output",
          "sys.txt",
          "./${fileBasenameNoExtension}.out",
          "<",
          "input.txt",
          ">",
          "output.txt",
          "&&",
          "rm",
          "*out"
        ],
        "presentation": {
          "reveal": "never"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": [
            "relative",
            "${workspaceRoot}"
          ],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      }
    ]
  }